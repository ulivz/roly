{
  "name": "roly",
  "version": "1.1.1",
  "description": "JavaScript happiness bundler",
  "license": "MIT",
  "repository": "ulivz/roly",
  "author": {
    "name": "ULIVZ",
    "email": "chl814@foxmail.com",
    "url": "github.com/ulivz"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "cross-env BABEL_ENV=test jest --env node && npm run lint && npm run build",
    "test:cov": "cross-env BABEL_ENV=test jest --env node --coverage && xo src/*.js",
    "test:update:snapshot": "cross-env BABEL_ENV=test jest -u",
    "build": "babel src --out-dir lib",
    "dev": "babel src --out-dir lib --watch",
    "lint": "xo src/*.js",
    "fix": "npm run lint -- --fix",
    "prepublish": "npm run build"
  },
  "main": "lib/roly.js",
  "bin": "cli.js",
  "files": [
    "lib",
    "cli.js"
  ],
  "keywords": [
    "rollup",
    "esnext",
    "compile",
    "babel",
    "buble",
    "es6"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.0.1",
    "eslint-config-ulivz": "^1.0.0",
    "fs-extra": "^8.1.0",
    "jest-cli": "^24.8.0",
    "rimraf": "^2.6.1",
    "rollup-plugin-typescript": "^1.0.1",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": "ulivz/prettier",
    "envs": [
      "jest"
    ],
    "rules": {
      "import/no-unresolved": 0
    },
    "ignores": [
      "docs/**"
    ]
  },
  "dependencies": {
    "cac": "^6.5.2",
    "camelcase": "^5.3.1",
    "chalk": "^2.1.0",
    "fancy-log": "^1.2.0",
    "req-cwd": "^3.0.0",
    "rollup": "^1.17.0",
    "rollup-plugin-alias": "^1.3.1",
    "rollup-plugin-async": "^1.2.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.2",
    "stringify-author": "^0.1.3",
    "switchy": "^0.1.0",
    "update-notifier": "^3.0.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/"
  }
}
